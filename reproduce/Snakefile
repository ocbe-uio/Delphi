rule install:
  input:
    "requirements.txt"
  shell: "\
    conda create -n delphi python=3.11\
    conda activate delphi\
    pip install -r {input}\
    "

rule train:
  input:
    "train.py",
    "config/train_delphi_demo.py"
  shell:
    "python {input[0]} {input[1]} --device=cuda --out_dir=Delphi-2M"
